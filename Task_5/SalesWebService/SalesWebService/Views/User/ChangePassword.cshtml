@model SalesWebService.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Changing the password";
}

    <h2>Changing the password for the user @Model.Email</h2>
<form asp-action="Create" asp-controller="IdentityUser">
    <div asp-validation-summary="All" class="btn-light"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group btn-light">
        <label asp-for="NewPassword" class="control-label">New password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-light" />
    </div>
</form>
