
@model SalesReportConverter.Model_.Models.Product
@{
    ViewBag.Title = "Add product";
}

<form asp-action="Create" asp-controller="Products">
    <div asp-validation-summary="All" class="btn-dark"></div>
    <div class="form-group btn-light">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group btn-light">
        <label asp-for="Cost">Cost</label>
        <input type="text" asp-for="Cost" class="form-control" />
    </div>
    <div>
        <input type="submit" value="Add" class="btn btn-info" />
    </div>
</form>