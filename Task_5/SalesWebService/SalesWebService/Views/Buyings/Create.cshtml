
@model SalesWebService.Models.Buyings.BuyingsCreateViewModel
@{
    ViewBag.Title = "Add buying";
}

<form asp-action="Create" asp-controller="Buyings">
    <div asp-validation-summary="All" class="btn-dark"></div>
    <div class="form-group btn-light">
        <label asp-for="ManagerName">ManagerName</label>
        <input type="text" asp-for="ManagerName" class="form-control" />
        <span asp-validation-for="ManagerName"></span>
    </div>
    <div class="form-group btn-light">
        <label asp-for="ManagerSecondName">Manager second name</label>
        <input type="text" asp-for="ManagerSecondName" class="form-control" />
        <span asp-validation-for="ManagerSecondName"></span>
    </div>
    <div class="form-group btn-light">
        <label asp-for="Buyer">Buyer full name</label>
        <input type="text" asp-for="Buyer" class="form-control" />
        <span asp-validation-for="Buyer"></span>
    </div>
    <div class="form-group btn-light">
        <label asp-for="Product">Product name</label>
        <input type="text" asp-for="Product" class="form-control" />
        <span asp-validation-for="Product"></span>
    </div>
    <div class="form-group btn-light">
        <label asp-for="PurchaseDate">Purchase date</label>
        <input type="text" asp-for="PurchaseDate" class="form-control" />
        <span asp-validation-for="PurchaseDate"></span>
    </div>
    <div class="form-group btn-light">
        <label asp-for="Cost">Purchase cost</label>
        <input type="number" asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost"></span>
    </div>

    <div>
        <input type="submit" value="Add" class="btn btn-info" />
    </div>
</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}